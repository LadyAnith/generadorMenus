<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Generador Menús!!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" rel="stylesheet">
            <link href="/css/nice-select.css" rel="stylesheet">
            <link href="/css/estilos.css" rel="stylesheet">
        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
            <script src="/js/jquery.nice-select.min.js"></script>
             <script src="/js/script.js"></script>

            <script type="text/javascript">
                $(function(){
                    $('.nice-select').niceSelect();
                })
            </script> 
        {% endblock %}
    </head>
    <body>

        {% block user_info %}
        {% if app.user %}
            <div class="user_info">
                <div>

                    ¡Hola  <strong>{{ app.user.username }}</strong>! <button class="btn btn-danger" ><a href="{{ path('app_logout') }}">Desconectar</a></button>
                </div>
            </div>
        {% endif %}
        {% endblock %}

        {% block jumbo %}

        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Generador de Menús</h1>
                <p class="lead">Menú del día</p>
                {% if app.user %}
                    <div class="mb-3">
                        El usuario: {{ app.user.username }}, está conectado <a href="{{ path('app_logout') }}">Desconectar</a>
                    </div>
                {% endif %}
            </div>
        </div>
        {% endblock %}

        {% block barraMenu %}
        <nav class="nav">
            <a class="nav-link active" href="/inicio">Inicio</a>
            <a class="nav-link" href="/usuarios">Usuarios</a>
            <a class="nav-link" href="/listado">Platos</a>
            <a class="nav-link disabled" href="/nuevoMenu" tabindex="-1" aria-disabled="true">Nuevo Menú</a>
        </nav>
         {% endblock %}
        {% block mensajesFlash %}
        <!-- Mensajes FLASH! sólo se ven una vez al cargar la pagina cuando existe su valor -->
            {% for message in app.flashes('info') %}
            <div class="modal" tabindex="-1" id="mensajeUpdate">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Información</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>{{message}}.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                        </div>
                    </div>
                </div>
            </div>
             <script type="text/javaScript">
                $('#mensajeUpdate').modal('show');
            </script>
             {% endfor %} 
         {% endblock %}
         {% block body %}
            <p>Este es el body de nuestro programa</p>
         {% endblock %}

    </body>
</html>
